{% extends "skeleton.tmpl" %}
{% set active_page = "archive" %}
{% block title %}Archive{% endblock %}
{% block main %}
  <h2>Archive</h2>
  <div class="content">
    <table class="layout">
      {% for post in posts %}
        <tr>
          <td class="layout">
            <span class="date">{{ post.date | displayed_datetime }}</span>
          </td>
          <td class="layout">
            <a href="/post/{{ post.slug }}">{{ post.title }}</a>
          </td>
        </tr>
      {% endfor %}
    </table>
  </div>
{% endblock %}
